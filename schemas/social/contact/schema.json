{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/social/contact/schema.json",
    "name": "social/contact",
    "title": "Contact",
    "titlePlural": "Contacts",
    "description": "A record of a contact",
    "type": "object",
    "color": "#FD4F64",
    "database": {
        "name": "social_contact",
        "indexes": {
            "email": ["email"],
            "did": ["did"],
            "name": ["lastName", "firstName"]
        }
    },
    "layouts": {
        "create": [
            "firstName",
            "lastName",
            "email",
            "mobile",
            "did"
        ],
        "view": [
            "firstName",
            "lastName",
            "email",
            "mobile",
            "did"
        ]
    },
    "allOf": [
        {"$ref": "/base/schema.json"},
        {
            "properties": {
                "firstName": {
                    "title": "First Name",
                    "type": "string"
                },
                "lastName": {
                    "title": "Last Name",
                    "type": "string"
                },
                "email": {
                    "title": "Email",
                    "type": "string",
                    "format": "email"
                },
                "mobile": {
                    "title": "Mobile",
                    "type": "string"
                },
                "did": {
                    "title": "DID",
                    "type": "string"
                }
            },
            "required": ["firstName", "lastName"]
        }
    ]
  }
